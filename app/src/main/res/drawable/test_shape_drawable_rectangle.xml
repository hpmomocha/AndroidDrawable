<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--solid表示填充。solid与gradient相互排斥，solid表示纯色填充-->
    <solid android:color="@color/crimson"/>
    <!-- android:radius同时为四个角设定相同的角度，优先度较低，会被其他四个属性覆盖 -->
    <!--<corners android:radius="20dp"-->
        <!--android:bottomLeftRadius="50dp"-->
        <!--android:bottomRightRadius="100dp"-->
        <!--android:topLeftRadius="200dp"-->
        <!--android:topRightRadius="500dp"/>-->
    <corners android:radius="20dp"/>
    <!-- solid与gradient相互排斥，gradient表示渐变效果-->
    <!-- android:useLevel一般为false，当Drawable作为StateListDrawable使用时为true-->
    <gradient android:angle="90"
        android:startColor="@color/coral"
        android:endColor="@color/aquamarine"
        android:type="linear"
        android:useLevel="false"/>
    <!-- Shape的描边 -->
    <stroke android:color="@color/mediumblue"
        android:width="5dp"
        android:dashGap="10dp"
        android:dashWidth="10dp"/>
    <!-- padding表示的不是shape的空白，而是包含它的View的空白-->
    <padding android:bottom="200dp"
        android:left="50dp"
        android:right="200dp"
        android:top="20dp"/>
</shape>